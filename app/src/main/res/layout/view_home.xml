<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.HomeViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:paddingTop="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="@{()->viewModel.onQrCodeClicked()}"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_scan" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_toStartOf="@+id/myProfile"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:elevation="@dimen/_1sdp"
                    android:id="@+id/new_notification"
                    android:visibility="gone"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@drawable/circular_red"
                    app:layout_constraintEnd_toEndOf="@+id/ivNotificationBell"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivNotificationBell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:onClick="@{()->viewModel.onNotificationClicked()}"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_bell_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/myProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circular_red"
                android:backgroundTint="@color/white"
                android:onClick="@{()->viewModel.onProfileClicked()}"
                app:srcCompat="@drawable/ic_profile_img" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbar_title"
                style="@style/TextviewBold"
                android:layout_centerVertical="true"
                android:layout_marginTop="19dp"
                android:layout_toEndOf="@+id/scan"
                android:paddingStart="18dp"
                android:text="@{viewModel.headerText}"
                android:textAlignment="center"
                android:textSize="20dp" />

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigationView"
            android:layout_below="@+id/toolbar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" >


        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            android:theme="@style/Widget.BottomNavigationView"
            app:itemBackground="@color/white"
            app:itemIconSize="18dp"
            app:itemIconTint="@drawable/bottom_navigation_selector"
            app:itemTextColor="@drawable/bottom_navigation_selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/navigation" />

    </RelativeLayout>
</layout>