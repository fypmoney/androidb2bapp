<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verification_title"
            style="@style/TextviewRegular"
            android:layout_marginTop="55dp"
            android:text="@string/add_money_trans_success_title"
            android:layout_gravity="center"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/text_color_dark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/amount"
            style="@style/TextviewBold"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_gravity="center"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin"
            app:srcCompat="@drawable/ic_transsaction_successful" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/updated_balance"
            style="@style/TextviewRegular"
            android:layout_marginTop="43dp"
            android:text="@string/updated_balance"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            />





    </LinearLayout>
</layout>

