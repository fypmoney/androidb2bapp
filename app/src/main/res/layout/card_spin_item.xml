<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:elevation="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:elevation="@dimen/_2sdp"
            android:text="Redeem 200 Fyp mynts"
            android:textColor="@color/cb_grey"
            android:layout_alignStart="@+id/layout"
            android:id="@+id/desc"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:layout_below="@+id/layout"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@id/layout"
            android:layout_width="wrap_content"
            android:elevation="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_16sdp"

            android:layout_height="wrap_content"

            android:gravity="center_horizontal">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/coin"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:adjustViewBounds="true"

                android:src="@drawable/ic_mynt_coin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coins_to_be_burn"
                style="@style/TextviewBold"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"

                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="200" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_146sdp"


            android:alpha=".10"
            android:background="@drawable/round_backgorund_20"
            android:backgroundTint="#F4F4F4"
            android:elevation="-1dp"
            app:cardCornerRadius="18dp" />

        <ImageView
            android:id="@+id/image_illus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_146sdp"


            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:elevation="-2dp" />


    </RelativeLayout>


</RelativeLayout>