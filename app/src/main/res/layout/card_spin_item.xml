<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/round_backgorund_20"
    android:backgroundTint="#F4F4F4"

    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:elevation="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_8sdp"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:elevation="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/cb_grey"
            android:layout_alignStart="@+id/layout"
            android:id="@+id/desc"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_100sdp"
            android:layout_below="@+id/layout"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@id/layout"
            android:layout_width="wrap_content"
            android:elevation="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_16sdp"

            android:layout_height="wrap_content"

            android:gravity="center_horizontal">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/coin"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:adjustViewBounds="true"

                android:src="@drawable/ic_mynt_coin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coins_to_be_burn"
                style="@style/TextviewBold"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"

                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="200" />
        </LinearLayout>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_illus"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1.9:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"


        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:elevation="-2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>