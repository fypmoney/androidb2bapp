<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.view.giftCardModule.viewModel.PurchaseGiftViewModel" />


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#f4f4f4"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_gift_card"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/message_text"
                style="@style/TextviewRegular"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color_light"
                android:textSize="15dp"
                tools:text="Earn 1 FypMynt for every â‚¹1 spent for a gift card" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amount"
                style="@style/TextviewBold"
                android:layout_below="@+id/message_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{@string/Rs+viewModel.availableAmount}"
                android:textSize="42dp"
                android:visibility="@{viewModel.isFetchBalanceVisible?View.GONE:View.VISIBLE,default=gone}" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/add_money"
                style="@style/TextviewRegular"
                android:layout_below="@id/amount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/add_money_gift_card"
                android:textColor="@color/text_color_dark"
                android:textSize="17sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/rv_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_money"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="@dimen/dp8"
                android:weightSum="4">


            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginStart="12dp"
                android:background="@drawable/edit_text_rounded_rectangle_shape_solid_gray_8"
                android:layout_below="@+id/rv_products"
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/type_your_msg_here"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vDivider5"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="@dimen/_18sdp"

                android:background="@drawable/round_top_background_grey">

                <RelativeLayout
                    android:id="@+id/layout"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_above="@+id/pay_and_purchase">

                    <LinearLayout
                        android:id="@+id/layout_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"

                        android:layout_alignParentBottom="true"

                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/contacts_heading"
                        style="@style/TextviewRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/search"
                        android:layout_alignBottom="@+id/search"
                        android:layout_marginStart="14dp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:text="Select from contacts"
                        android:textColor="@color/text_color_dark"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/search"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:background="#f4f4f4"
                        android:drawableStart="@drawable/ic_icon_feather_search"


                        android:drawablePadding="10dp"

                        android:fontFamily="@font/product_sans_regular"
                        android:hint="@string/search"
                        android:layoutDirection="rtl"
                        android:padding="10dp"
                        android:textColor="@color/text_color_dark"
                        android:textColorHint="@color/text_color_dark"
                        android:textSize="14sp"
                        app:iconifiedByDefault="true" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search"
                        app:adapter="@{viewModel.contactAdapter}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rv_contacts"
                        android:layout_marginStart="6dp"
                        android:id="@+id/not_fyper_selected"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"


                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="4dp"

                            android:backgroundTint="#BAE6C2"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="@dimen/card_elevation">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <androidx.appcompat.widget.AppCompatImageView

                                    android:id="@+id/add"
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_add" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/name_tv"
                            style="@style/TextviewRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView2"
                            android:layout_gravity="center_vertical"

                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="4dp"

                            android:text="Not in the list?\n No worries you can add from here"
                            android:textColor="@color/text_color_light" />
                    </LinearLayout>


                </RelativeLayout>

                <Button
                    android:id="@+id/pay_and_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_46sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"

                    android:layout_marginBottom="@dimen/_18sdp"
                    android:onClick="@{()->viewModel.onAddClicked()}"
                    android:text="@string/pay"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"


                    />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>