<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight">

        <View
            android:id="@+id/view"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bill_details"
            style="@style/TextviewBold"
            android:layout_width="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/set_or_change_pin"
            android:textAlignment="center"
            android:textSize="20dp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bill_details"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <TableRow android:padding="5dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/item_total"
                    style="@style/TextviewRegular"
                    android:textSize="17dp"
                    android:textColor="@color/text_color_dark"
                    android:text="@string/set_or_change_pin1" />


            </TableRow>

            <TableRow android:padding="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/packaging"
                    style="@style/TextviewRegular"
                    android:textSize="17dp"
                    android:textColor="@color/text_color_dark"
                    android:text="@string/set_or_change_pin2" />


            </TableRow>

            <TableRow android:padding="5dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/delivery_fee"
                    style="@style/TextviewRegular"
                    android:textSize="17dp"
                    android:textColor="@color/text_color_dark"
                    android:text="@string/set_or_change_pin3" />

            </TableRow>


        </TableLayout>
    </RelativeLayout>
</layout>