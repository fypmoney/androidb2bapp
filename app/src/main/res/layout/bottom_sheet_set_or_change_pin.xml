<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight">

        <View
            android:id="@+id/view"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bill_details"
            style="@style/TextviewBold"
            android:layout_width="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/set_or_change_pin"
            android:textAlignment="center"
            android:textSize="20dp" />


        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bill_details"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TableRow android:padding="5dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/item_total"
                    style="@style/TextviewRegular"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_dark"
                    android:text="@string/set_or_change_pin1" />


            </TableRow>

            <TableRow android:padding="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/packaging"
                    style="@style/TextviewRegular"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_dark"
                    android:text="@string/set_or_change_pin2" />


            </TableRow>




        </TableLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goToMessages"
            style="@style/Widget.App.Button"
            android:layout_width="299dp"
            android:layout_height="52dp"
            android:layout_below="@+id/table"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/curved_background1"
            android:text="@string/set_or_change_pin_btn_text"
            android:textAllCaps="false"
            app:backgroundTint="@color/text_color_dark" />

    </RelativeLayout>
</layout>