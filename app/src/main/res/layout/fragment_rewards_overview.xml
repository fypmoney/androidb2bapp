<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/amount_mynts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bootom_part_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_6sdp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:alpha=".10"
                        android:background="@drawable/round_backgorund_20"
                        android:backgroundTint="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16sdp"


                        app:layout_constraintBottom_toBottomOf="@+id/total_refral_won_value_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/total_refral_won_value_tv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/total_refral_won_tv"
                        style="@style/TextviewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:alpha=".4"

                        android:text="@string/total_savings"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/total_refral_won_value_tv"
                        app:layout_constraintTop_toBottomOf="@+id/total_refral_won_value_tv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/total_refral_won_value_tv"
                        style="@style/TextviewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:textColor="@color/spin_light"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loading_amount_hdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/three_dot_amount_loader"
                        app:layout_constraintBottom_toBottomOf="@+id/total_refral_won_value_tv"

                        app:layout_constraintStart_toEndOf="@+id/total_refral_won_value_tv"
                        app:layout_constraintTop_toTopOf="@+id/total_refral_won_value_tv"
                        tools:visibility="visible" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:id="@+id/total_mynts_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_6sdp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent">

                    <RelativeLayout
                        android:id="@+id/relativeLayout7"
                        android:layout_width="0dp"


                        android:layout_height="0dp"

                        android:alpha=".10"
                        android:background="@drawable/round_backgorund_20"
                        android:backgroundTint="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/mynticon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:src="@drawable/ic_mynt_coin"
                        app:layout_constraintBottom_toBottomOf="@+id/total_mynts_won_value_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/total_mynts_won_value_tv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/total_mynts_won_tv"
                        style="@style/TextviewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_18sdp"

                        android:alpha=".40"
                        android:text="@string/your_mynts"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/total_mynts_won_value_tv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/total_mynts_won_value_tv"
                        style="@style/TextviewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"

                        android:layout_marginTop="@dimen/_14sdp"
                        android:textColor="@color/color_orange"
                        android:textSize="24sp"
                        app:layout_constraintStart_toEndOf="@+id/mynticon"

                        app:layout_constraintTop_toTopOf="parent" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loading_amount_mynts"
                        android:layout_width="0dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/three_dot_amount_loader"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/total_mynts_won_value_tv"
                        app:layout_constraintStart_toEndOf="@+id/total_mynts_won_value_tv"
                        app:layout_constraintTop_toTopOf="@+id/total_mynts_won_value_tv"
                        tools:visibility="visible" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/golden_card_layout"
                android:layout_width="match_parent"
                android:layout_below="@+id/amount_mynts"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha=".10"
                    android:background="@drawable/round_dark_grey_rewards_18"
                    android:backgroundTint="@color/grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"


                    android:layout_marginEnd="@dimen/_12sdp"
                    android:src="@drawable/ticket"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/golder_card_won_heading"
                    style="@style/TextviewRegular"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/_56sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"

                    android:alpha=".8"
                    android:text="@string/total_golden_cards"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/loading_golden_cards"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3"
                    app:layout_constraintStart_toEndOf="@+id/amount_golder_tv"
                    app:layout_constraintTop_toTopOf="@+id/loading_golden_cards" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/amount_golder_tv"
                    style="@style/TextviewBold"
                    android:text="@string/four_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:textColor="@color/reward_golden_tickets_text"

                    android:visibility="invisible"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loading_golden_cards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_gravity="center"

                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/three_dot_amount_loader"
                    app:layout_constraintBottom_toBottomOf="@+id/amount_golder_tv"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/amount_golder_tv"
                    tools:visibility="visible" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:id="@+id/shimmerLayout"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_below="@+id/golden_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/shimmer_placeholder_layout_store" />

                    <include layout="@layout/shimmer_placeholder_layout_store" />

                    <include layout="@layout/shimmer_placeholder_layout_store" />

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/golden_card_layout"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/LoadProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_4sdp"

                android:visibility="gone"
                android:layout_alignParentBottom="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/dots_animation" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>