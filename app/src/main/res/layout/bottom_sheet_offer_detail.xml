<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    tools:src="@drawable/myntra_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/brandName"
                        style="@style/TextviewRegular"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_weight=".5"
                        android:textColor="@color/text_color_dark"
                        tools:text="Myntra" />

                    <TextView
                        android:id="@+id/offer_title"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"

                        android:layout_marginTop="@dimen/_2sdp"

                        android:textColor="@color/text_color_dark"
                        android:textSize="14sp"
                        android:layout_marginStart="@dimen/_14sdp"
                        tools:text="Congrats! 50% off from Myntra"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assigned"

                style="@style/TextviewBold"

                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"

                android:text="@string/offer_details_caps"

                android:textAlignment="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:padding="@dimen/_8sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextviewBold"

                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="10dp"

                android:text="TERMS &amp; CONDITIONS"
                android:textSize="16sp"

                android:textAlignment="center" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:padding="@dimen/_8sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>


    </LinearLayout>


</layout>

