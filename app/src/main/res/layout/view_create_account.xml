<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.CreateAccountViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/page_padding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivServiceLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_create_account" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCreateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivServiceLogo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/create_account_title"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/main_title_size"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/verification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCreateAccount"
                    android:layout_marginTop="@dimen/margin_20"
                    android:text="@string/first_name_label"
                    android:textColor="@color/text_color_light" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/verification_title"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_text_rounded_rectangle_shape_solid_gray"
                    android:hint="@string/first_name_hint"
                    android:padding="@dimen/_8sdp"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:text="@={viewModel.firstName}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/et_last_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_first_name"
                    android:layout_marginTop="@dimen/margin_20"
                    android:text="@string/last_name_label"
                    android:textColor="@color/text_color_light" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_last_name_label"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_text_rounded_rectangle_shape_solid_gray"
                    android:hint="@string/last_name_hint"
                    android:padding="@dimen/_8sdp"
                    android:inputType="textCapWords"
                    android:text="@={viewModel.lastName}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_last_name"
                    android:layout_marginTop="@dimen/margin_20"
                    android:text="@string/dob_label"
                    android:textColor="@color/text_color_light" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDob"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/birthday_icon"
                    android:focusable="false"
                    android:hint="@string/dd_mm_yyyy"
                    android:inputType="none"
                    android:onClick="@{()->viewModel.onDobClicked()}"
                    android:singleLine="true"
                    android:text="@={viewModel.dob}" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/spNameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etDateOfBirth"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@drawable/edit_text_rounded_rectangle_shape_solid_gray"
                    android:padding="@dimen/_5sdp"
                    android:text="@{viewModel.majorMinorText}"
                    android:visibility="@{viewModel.isMajorMinorVisible?View.VISIBLE:View.GONE}"
                    />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendOtp"
                    style="@style/Widget.App.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button_height"
                    android:layout_below="@+id/etDateOfBirth"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/curved_background1"
                    android:onClick="@{()->viewModel.onContinueClicked()}"
                    android:text="@string/continue_btn_text"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/text_color_dark" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/alreadyHaveAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_toStartOf="@+id/login"
                    android:gravity="start"
                    android:text="@string/already_have_account_title"
                    android:textColor="@color/text_color_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:onClick="@{()->viewModel.onLoginClicked()}"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:text="@string/login" />


            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>