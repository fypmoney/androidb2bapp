<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/ll_main"
        android:background="#2D3039"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/curved_background1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_title"
            style="@style/TextviewBold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginTop="@dimen/_26sdp"
            android:text="@string/uh_oh"
            android:textColor="@color/white"
            android:textSize="31sp" />

        <ImageView
            android:layout_width="@dimen/_184sdp"
            android:layout_marginTop="@dimen/_26sdp"
            app:srcCompat="@drawable/ic_low_balance"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_108sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextviewRegular"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:text="@string/insufficient_bank_balance"
            android:textColor="@color/text_color_light"
            android:id="@+id/sub_title_tv"
            android:textAlignment="center" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextviewRegular"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="@string/insufficient_bank_balance"
            android:textColor="@color/white"
            android:id="@+id/add_money_tv"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/lin"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">

            <Button


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/text_color_dark"
                android:layout_gravity="center"
                android:text="@string/request_money"
                android:id="@+id/reject"

                android:visibility="gone"
                android:textAllCaps="false"
                android:background="@android:color/transparent"

                />

            <Button


                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/continue_txt"
                android:textSize="16sp"
                android:id="@+id/add_money_btn"
                android:textAllCaps="false"
                app:backgroundTint="@color/text_color_dark" />

        </LinearLayout>


    </LinearLayout>


</layout>

