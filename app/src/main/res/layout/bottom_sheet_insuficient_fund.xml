<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_title"
            style="@style/TextviewBold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_46sdp"
            android:text="Uh oh!"
            android:textColor="@color/text_color_dark"
            android:textSize="31sp" />

        <ImageView
            android:layout_width="@dimen/_184sdp"
            android:layout_marginTop="@dimen/_26sdp"
            app:srcCompat="@drawable/ic_low_balance"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_108sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextviewRegular"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"

            android:text="Insufficient bank balance"
            android:textColor="@color/text_color_dark"
            android:id="@+id/task_details"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:id="@+id/lin"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton

                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:textColor="@color/text_color_dark"
                android:layout_gravity="center"
                android:text="Request Money"
                android:id="@+id/reject"
                android:textSize="16sp"

                android:textAllCaps="false"
                android:background="@android:color/transparent"

                />

            <com.google.android.material.button.MaterialButton

                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/curved_background1"
                android:text="Add Money"
                android:textSize="16sp"
                android:id="@+id/accept"
                android:textAllCaps="false"

                app:backgroundTint="@color/text_color_dark" />

        </LinearLayout>


    </LinearLayout>


</layout>

