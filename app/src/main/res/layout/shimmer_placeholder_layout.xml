<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/layoutServicePrice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical"
           >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivServiceLogo"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:background="@color/text_color_little_dark"
               />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/heading"
                style="@style/AppTheme.Widget.TextView"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxLines="2"
                android:textStyle="bold"
                android:background="@color/text_color_little_dark"
                android:textSize="@dimen/sub_title_size"
                app:fontFamily="@font/poppins_medium" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/type"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/text_color_little_dark"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="4" android:textSize="@dimen/edit_text_size" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/curved_background1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivServiceLogo1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="@color/text_color_little_dark"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heading1"
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:background="@color/text_color_little_dark"
                    android:textSize="@dimen/sub_title_size"
                    app:fontFamily="@font/poppins_medium" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/type1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/text_color_little_dark"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="4" android:textSize="@dimen/edit_text_size" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cancel1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/curved_background1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    app:textAllCaps="false" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
