<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#0E141C"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/toolbar_layout" />


        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/lin"
            android:background="@drawable/round_top_background_"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#262B32"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextviewBold"

                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="26dp"

                android:text="How to redeem steps"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/text_color_light"
                android:textAlignment="center" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_18sdp"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:background="@drawable/ic_sides_middle_curve_bg"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_width="match_parent"
            android:id="@+id/lin"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_24sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"

                            tools:src="@drawable/ic_user" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/brandName"
                            style="@style/TextviewBold"
                            android:layout_weight="5"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"

                            android:textSize="16sp"

                            android:textColor="@color/white"
                            android:text="Myntra" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_height="wrap_content">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/coupon_amount"
                                style="@style/TextviewBold"
                                android:layout_gravity="center"

                                android:layout_weight=".5"
                                android:textSize="18sp"


                                android:textColor="@color/color_green"
                                android:text="Myntra" />

                            <androidx.appcompat.widget.AppCompatTextView

                                style="@style/TextviewRegular"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_14sdp"

                                android:textSize="12sp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:textColor="@color/white"
                                android:alpha=".60"
                                android:text="Voucher Value" />

                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/offer_title"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="@dimen/_14sdp"
                        tools:text="Congrats! 50% off from Myntra"
                        android:layout_height="wrap_content" />


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextviewBold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="62dp"
                    android:text="Details"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_light"
                    android:textSize="12sp" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:id="@+id/gift_details"
                    style="@style/TextviewRegular"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:layout_marginEnd="@dimen/_18sdp"

                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>