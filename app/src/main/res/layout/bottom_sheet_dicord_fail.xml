<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verification_title"
            style="@style/TextviewBold"
            android:layout_marginTop="55dp"
            android:text="Failed"
            android:layout_gravity="center" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="43dp"
            app:srcCompat="@drawable/ic_transaction_failed" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/updated_balance"
            style="@style/TextviewRegular"
            android:layout_marginTop="43dp"
            android:text="@string/add_money_trans_fail_text"
            android:layout_gravity="center"
            android:paddingStart="40dp"
            android:textAlignment="center"
            android:paddingEnd="40dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/add_amount"
            style="@style/TextviewRegular"
            android:layout_marginTop="33dp"
            android:text="@string/add_btn_text"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/text_color_dark"

            />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/changeMethod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:text="Retry"
                android:textAllCaps="false"
                app:backgroundTint="@color/text_color_dark" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_retry_InCenter"
            style="@style/Widget.App.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry_btn_text"
            android:background="@drawable/curved_background1"
            android:textAllCaps="false"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:layout_gravity="center"
            app:backgroundTint="@color/text_color_dark" />


    </LinearLayout>
</layout>

