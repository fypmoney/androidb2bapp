<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView


                style="@style/TextviewBold"


                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:textColor="@color/text_color_light"
                android:layout_margin="@dimen/_20sdp"

                android:textSize="18sp"
                android:gravity="start"

                android:text="I hereby acknowledge that the KYC information provided by me (name, date of birth, document proof) is accurate and give consent to verify the KYC document. Any discrepancies that may be found by Fyp or our partner bank in the information submitted may result in the temporary block of your wallet till such time the correct information is re-submitted."

                />


        </LinearLayout>


    </LinearLayout>


</layout>

