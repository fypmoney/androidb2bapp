<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.ContactListViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/layout"
            layout="@layout/toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_View_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_background23"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_below="@+id/layout">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_balance"
                style="@style/TextviewRegular"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/balance_text"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amount"
                style="@style/TextviewBold"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="@{@string/Rs+viewModel.availableAmount}"
                android:visibility="@{viewModel.isFetchBalanceVisible?View.INVISIBLE:View.VISIBLE,default=gone}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_balance"
                tools:visibility="visible"
                tools:text="â‚¹8,954" />

            <com.fypmoney.view.customview.HorizontalDottedProgress
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amountFetching"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                tools:visibility="visible"
                android:layout_marginStart="50dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_balance"
                app:layout_constraintEnd_toEndOf="@+id/tv_balance"
                app:layout_constraintStart_toStartOf="@+id/tv_balance" />





        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search"
            style="@style/AppTheme.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_View_layout"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/curved_background15"
            android:drawableStart="@drawable/ic_icon_feather_search"
            android:drawablePadding="10dp"
            android:fontFamily="@font/product_sans_regular"
            android:hint="@string/search"
            android:onTextChanged="@{viewModel.onTextChanged}"
            android:padding="10dp"
            android:textColor="@color/text_color_dark"
            android:textColorHint="@color/text_color_dark"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextviewRegular"
            android:textColor="@color/text_color_dark"
            android:gravity="center"
            android:id="@+id/not_data_in_phone_book_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search"
            android:layout_marginTop="50dp"
            tools:visibility="visible"
            android:visibility="@{viewModel.contactNotFound?View.VISIBLE:View.GONE,default=gone}"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:text="@string/contact_not_found"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnContinue"
            android:layout_below="@+id/search"
            android:layout_marginTop="@dimen/margin"
            app:adapter="@{viewModel.contactAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            style="@style/Widget.App.Button"
            android:layout_width="299dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/curved_background1"
            android:onClick="@{()->viewModel.onSelectClicked()}"
            android:text="@string/select_btn_text"
            android:textAllCaps="false"
            android:visibility="gone"
            app:backgroundTint="@color/text_color_dark" />

    </RelativeLayout>
</layout>

