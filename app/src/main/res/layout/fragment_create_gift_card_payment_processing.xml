<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"
        tools:context=".view.giftcard.CreateGiftCardPaymentProcessingFragment">


        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_cpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:trackColor="@color/text_color_light"
            app:indicatorColor="@color/color_orange"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextviewBold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginHorizontal="@dimen/dp20"
            android:layout_marginTop="9dp"
            android:gravity="center"
            tools:text="Processing payment of â‚¹ 20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_cpi" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/body_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextviewRegular"
            android:textColor="@color/text_color_light"
            android:textSize="14sp"
            android:layout_marginHorizontal="@dimen/dp20"
            android:layout_marginTop="20dp"
            android:text="@string/please_do_not_press_back_or_close_the_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>