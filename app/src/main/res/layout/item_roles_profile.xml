<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.fypmoney.model.homemodel.Users" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recent_user_cl"
        android:layout_width="wrap_content"
        android:background="@drawable/round_backgorund_20"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recent_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"
            android:padding="2dp"
            app:customIsRounded="@{true}"
            app:customStrokeColor="@{@color/grey}"
            app:customStrokeWidth="@{@dimen/dp5}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_profile" />

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/TextviewRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:textColor="@color/text_color_dark"
            app:layout_constraintBottom_toBottomOf="@+id/recent_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recent_iv"
            app:layout_constraintTop_toTopOf="@+id/recent_iv"
            tools:text="User Name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>