<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewStartContent"
            android:layout_width="0dp"
            android:layout_height="@dimen/_152sdp"
            android:layout_marginStart="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@color/editTextStrokeColor"
            app:layout_constraintBottom_toBottomOf="@+id/viewMiddleContent"
            app:layout_constraintEnd_toStartOf="@+id/viewMiddleContent"
            app:layout_constraintTop_toTopOf="@+id/viewMiddleContent" />

        <View
            android:id="@+id/viewMiddleContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginStart="@dimen/_52sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_52sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@color/editTextStrokeColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewEndContent"
            android:layout_width="0dp"
            android:layout_height="@dimen/_152sdp"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@color/editTextStrokeColor"
            app:layout_constraintBottom_toBottomOf="@+id/viewMiddleContent"
            app:layout_constraintStart_toEndOf="@+id/viewMiddleContent"
            app:layout_constraintTop_toTopOf="@+id/viewMiddleContent" />

        <View
            android:id="@+id/heading"
            style="@style/TextviewRegular"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@color/editTextStrokeColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewMiddleContent" />

        <View
            android:id="@+id/btnPlay"
            style="@style/TextviewRegular"
            android:layout_width="@dimen/_162sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@color/editTextStrokeColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>