<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0E141C"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:src="@drawable/ic_user2"
            android:background="@drawable/circular2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="31dp"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sahil"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/tvUserNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85749 82934"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvLastRecharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last recharge: 300 on 16 sep 2021"
                android:textColor="#48AB5B"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/strokebutton_green_middle_18"
            android:layout_marginTop="38dp"
            android:text="Recharge"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#48AB5B"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="14dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            app:backgroundTint="#0E141C" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_light"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="24dp" />
</LinearLayout>
