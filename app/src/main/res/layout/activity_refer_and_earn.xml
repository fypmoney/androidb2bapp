<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.fypmoney.view.referandearn.viewmodel.ReferAndEarnActivityVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.referandearn.view.ReferAndEarnActivity">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


         <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/upper_part_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_16sdp"
                    android:background="@color/dividerColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/refer_and_earn_sub_title_tv" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/refer_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_refer_and_earn" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:padding="@dimen/_6sdp"
                    app:srcCompat="@drawable/ic_share"
                    android:onClick="@{()->viewmodel.shareCode()}"
                    app:layout_constraintBottom_toBottomOf="@+id/referal_code_value_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/referal_code_value_tv" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/referal_code_tv"
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/your_referral_code"
                    android:textColor="@color/grey_heading"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/refer_and_earn_sub_title_tv"
                    style="@style/TextviewRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center"
                    tools:text="@string/share_referral_code_with_your_friend_and_after_they_install_both_of_you_will_get_50_cash_rewards"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_light"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/refer_and_earn_title_tv" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/refer_and_earn_title_tv"
                    style="@style/TextviewRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="58dp"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="center"
                    tools:text="@string/refer_to_your_friend_and_get_a_cash_reward_of_50"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_dark"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/refer_iv" />

             <com.google.android.material.textview.MaterialTextView
                 android:id="@+id/referal_code_value_tv"
                 style="@style/TextviewBold"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="20dp"
                 android:layout_marginTop="11dp"
                 android:textColor="@color/text_color_dark"
                 android:textSize="24sp"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/referal_code_tv"
                 app:layout_constraintVertical_bias="0.01"
                 tools:text="FYP2D4" />

             <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/copy_code_tv"
                    style="@style/TextviewBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"

                    android:drawableStart="@drawable/ic_icon_feather_copy"
                    android:drawablePadding="@dimen/dp10"
                    android:textColor="@color/color_skyblue"
                    android:textSize="17sp"
                    android:onClick="@{()->viewmodel.copyCode()}"
                    app:drawableTint="@color/color_skyblue"
                    app:layout_constraintBottom_toBottomOf="@+id/referal_code_value_tv"
                    app:layout_constraintEnd_toStartOf="@+id/share_iv"
                    app:layout_constraintStart_toEndOf="@+id/referal_code_value_tv"
                    app:layout_constraintTop_toTopOf="@+id/referal_code_value_tv"
                    android:text="@string/copy_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bootom_part_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            android:paddingHorizontal="16dp"
            android:paddingVertical="40dp"
            android:background="@drawable/ic_total_referral_won"
            android:layout_marginHorizontal="@dimen/dp16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/total_refral_won_tv"
                style="@style/TextviewBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark"
                android:textSize="14sp"
                android:text="@string/total_referral_won"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/total_refral_won_value_tv"
                style="@style/TextviewBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_winnings"
                android:textSize="22sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_refral_won_tv"/>

            <com.fypmoney.view.customview.HorizontalDottedProgressBlack
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/loading_amount_hdp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/total_refral_won_tv"
                app:layout_constraintStart_toStartOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>