<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.arcadegames.ui.SpinWheelFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/spin_wheel_linear_chip_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/curved_background_chip_back"
                        android:paddingStart="12dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="10dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/spin_wheel_mynt_logo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/mynt" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/spin_wheel_mynts_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/dummy_amount"
                            android:textColor="@color/color_dark_yellow"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/spin_wheel_mynt_logo"
                            app:layout_constraintStart_toEndOf="@+id/spin_wheel_mynt_logo"
                            app:layout_constraintTop_toTopOf="@id/spin_wheel_mynt_logo" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/curved_background_chip_back"
                        android:paddingStart="12dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="10dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/spin_wheel_ticket_logo"
                            android:layout_width="28dp"
                            android:layout_height="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ticket" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/spin_wheel_tickets_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/dummy_amount"
                            android:textColor="@color/yellow10"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/spin_wheel_ticket_logo"
                            app:layout_constraintStart_toEndOf="@+id/spin_wheel_ticket_logo"
                            app:layout_constraintTop_toTopOf="@id/spin_wheel_ticket_logo" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/curved_background_chip_back"
                        android:paddingStart="12dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="10dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/spin_wheel_cash_logo"
                            android:layout_width="28dp"
                            android:layout_height="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/cash" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/spin_wheel_cash_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/dummy_amount1"
                            android:textColor="@color/green_winnings"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/spin_wheel_cash_logo"
                            app:layout_constraintStart_toEndOf="@+id/spin_wheel_cash_logo"
                            app:layout_constraintTop_toTopOf="@id/spin_wheel_cash_logo" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_super_jackpot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="24dp"
                    app:cardBackgroundColor="@color/back_surface_color"
                    app:cardCornerRadius="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spin_wheel_linear_chip_container">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/view_cons_spin_wheel_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_ellipse_back"
                        android:visibility="invisible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_banner_spin_wheel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/zerbonics" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/view_cons_rewards"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_you_won"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="@string/you_have_won"
                            android:textColor="@color/yellow_won_color"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_spin_rewards"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_you_won"
                            app:srcCompat="@drawable/ic_mynt_rewards" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_win_rewards_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="18dp"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="@string/_100_mynts"
                            android:textColor="@color/color_orange"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_spin_rewards" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lucky_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/card_super_jackpot">

                    <com.fypmoney.util.spinwheel.LuckyWheelView
                        android:id="@+id/lucky_wheel_view"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scrollbarFadeDuration="30"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lkwCenterImage="@drawable/help"
                        app:lkwCursor="@drawable/ic_cursor"
                        app:lkwEdgeColor="@color/wheel_border"
                        app:lkwEdgeWidth="15"
                        app:lkwTopTextColor="@color/white"
                        app:lkwTopTextPadding="20dp"
                        app:lkwTopTextSize="18sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_service_logo"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintBottom_toBottomOf="@+id/lucky_wheel_view"
                        app:layout_constraintEnd_toEndOf="@+id/lucky_wheel_view"
                        app:layout_constraintStart_toStartOf="@+id/lucky_wheel_view"
                        app:layout_constraintTop_toTopOf="@+id/lucky_wheel_view"
                        app:srcCompat="@drawable/wheel_button" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_service_logo1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="90dp"
                        android:adjustViewBounds="true"
                        android:rotation="39"
                        app:layout_constraintBottom_toBottomOf="@+id/lucky_wheel_view"
                        app:layout_constraintEnd_toEndOf="@+id/lucky_wheel_view"
                        app:layout_constraintStart_toStartOf="@+id/lucky_wheel_view"
                        app:layout_constraintTop_toTopOf="@+id/lucky_wheel_view"
                        app:srcCompat="@drawable/cirular_ring" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_attempts_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:text="@string/_10_10_attempts_left"
                    android:textColor="@color/text_body_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lucky_layout" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_play_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_bottom_spin_wheel_back"
                    android:fontFamily="@font/product_sans_bold"
                    android:paddingStart="62dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="62dp"
                    android:paddingBottom="16dp"
                    android:text="@string/play_now"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color_dark"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_attempts_left" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/curved_background_chip_back"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_play_now">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mynt_required_logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/mynt" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/spin_wheel_burn_mynt_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/dummy_amount"
                        android:textColor="@color/color_dark_yellow"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/mynt_required_logo"
                        app:layout_constraintStart_toEndOf="@+id/mynt_required_logo"
                        app:layout_constraintTop_toTopOf="@id/mynt_required_logo" />

                </androidx.constraintlayout.widget.ConstraintLayout>


