<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verification_title"
            style="@style/TextviewBold"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="@string/log_out_title" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="43dp"
            app:srcCompat="@drawable/ic_sign_out" />



        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cancel"
                style="@style/TextviewRegular"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/cancel_btn_text"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/textSize_18" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_logout"
                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/curved_background1"
                android:text="@string/log_out_btn_text"
                android:textAllCaps="false"
                app:backgroundTint="@color/text_color_dark" />

        </LinearLayout>


    </LinearLayout>
</layout>

