<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AirtelPrepaid"
        android:background="#0E141C">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0E141C">

            <include
                android:id="@+id/layout"
                layout="@layout/toolbar" />

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_below="@+id/layout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/ic_user2"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="29dp"
                android:layout_toRightOf="@id/ivUser"
                android:text="User"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvUserNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserName"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@id/ivUser"
                android:text="+91 86482 72819"
                android:textColor="#9CA3A5"
                android:textSize="14sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/optionsMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserNumber"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="27.76dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_backgorund_white_20"
                android:backgroundTint="#1C2129"
                android:padding="24dp">


                <TextView
                    android:id="@+id/amount_tv"
                    style="@style/TextviewBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="â‚¹ 839"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:alpha=".20"

                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/amount_tv"
                    tools:layout_editor_absoluteX="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/view5"
                    tools:layout_editor_absoluteX="24dp">

                    <TextView
                        style="@style/TextviewRegular"
                        android:id="@+id/details"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Data : 1.5GB/day" />

                    <TextView
                        style="@style/TextviewRegular"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Calls : Unlimited Local, STD &amp; Roaming calls" />

                    <TextView
                        style="@style/TextviewRegular"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Validity : 84 Days" />

                    <TextView
                        android:layout_marginTop="@dimen/_8sdp"
                        style="@style/TextviewRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="SMS : 100/Days" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    tools:text="Truly Unlimited"
                    android:id="@+id/planType"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/amount_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/amount_tv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/optionsMenu"
                android:layout_marginLeft="87dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="86dp"

                android:layout_marginBottom="104dp"
                android:fontFamily="sans-serif"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#231F20"
                android:textSize="18sp"
                android:textStyle="normal"
                app:backgroundTint="#FFFFFF" />

        </RelativeLayout>

    </ScrollView>
</layout>