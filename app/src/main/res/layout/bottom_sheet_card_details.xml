<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_top_background_"
            android:paddingBottom="@dimen/_8sdp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo_white" />

            <RelativeLayout
                android:id="@+id/mCardBackLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginStart="10dp"

                android:layout_marginEnd="10dp"
                android:padding="16dp">


                <CheckBox
                    android:id="@+id/image"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:layout_below="@+id/card_details"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end|center_vertical"

                    android:layout_marginStart="5dp"

                    android:button="@drawable/password"
                    android:buttonTint="#dedede"
                    android:checked="false"
                    android:elevation="3dp"

                    android:paddingStart="8dp"
                    android:paddingEnd="0dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextviewRegular"
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/white"
                    android:text="@string/copy"
                    android:textColor="@color/white"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableEnd="@drawable/ic_icon_feather_copy" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/expiry"
                    style="@style/TextviewRegular"
                    android:layout_below="@+id/card_details"
                    android:text="@string/expiry_details_title"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ExpiryValue"
                    style="@style/TextviewBold"


                    android:layout_below="@+id/card_details"
                    android:layout_toEndOf="@+id/expiry"

                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cvv"
                    style="@style/TextviewRegular"
                    android:layout_below="@+id/card_details"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_toStartOf="@+id/cvvValue"
                    android:text="@string/cvv_details_title"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cvvValue"
                    style="@style/TextviewBold"


                    android:layout_below="@+id/card_details"
                    android:layout_toStartOf="@+id/image"
                    android:inputType="textPassword"

                    android:textColor="@color/white"
                    android:textSize="17dp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_details"
                    style="@style/TextviewRegular"

                    android:layout_marginBottom="@dimen/_18sdp"


                    android:textColor="@color/white"
                    android:textSize="17dp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <data></data>
</layout>

