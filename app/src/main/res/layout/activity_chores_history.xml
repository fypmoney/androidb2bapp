<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.ChoresViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

            <androidx.core.widget.NestedScrollView
                android:layout_marginBottom="@dimen/_40sdp"
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/verification_title1"
                        style="@style/TextviewRegular"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/margin_20"
                        android:text="@string/assign_task" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:clipToPadding="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_create"
                                android:layout_width="match_parent"
                                app:cardElevation="6dp"
                                app:cardBackgroundColor="@color/split_bills_background"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="14dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_marginTop="30dp"
                                        android:background="@drawable/ic_plus"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="30dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="center"
                                        android:gravity="left"
                                        android:textSize="16sp"
                                        style="@style/TextviewRegular"
                                        android:textColor="@android:color/black"
                                        android:text="@string/create_own_task"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_plant_water"
                                android:layout_width="match_parent"
                                app:cardElevation="6dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="14dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textStart"
                                        android:gravity="left"
                                        android:text="Water the plants"
                                        style="@style/TextviewRegular"
                                        android:textColor="@android:color/black"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="25dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                                        android:text="₹70"
                                        style="@style/TextviewRegular"
                                        android:textColor="@color/color_skyblue"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="-15dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                                        style="@style/TextviewRegular"
                                        android:text="1 Day"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_clean_bed"
                                android:layout_width="match_parent"
                                app:cardElevation="6dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="14dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textStart"
                                        android:gravity="left"
                                        android:text="Clean bedroom"
                                        style="@style/TextviewRegular"
                                        android:textColor="@android:color/black"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="25dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                                        android:text="₹70"
                        style="@style/TextviewRegular"
                                        android:textColor="@color/color_skyblue"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="-15dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                        style="@style/TextviewRegular"
                                        android:text="Weekend"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_make_bed"
                                android:layout_width="match_parent"
                                app:cardElevation="6dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="14dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textStart"
                                        android:gravity="left"
                                        android:text="Make your bed after getting up"
                                        style="@style/TextviewRegular"
                                        android:textColor="@android:color/black"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="25dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                                        android:text="₹70"
                        style="@style/TextviewRegular"
                                        android:textColor="@color/color_skyblue"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="-15dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                                        style="@style/TextviewRegular"
                                        android:text="Everyday"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_plant_water1"
                                android:layout_width="match_parent"
                                app:cardElevation="6dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="14dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textStart"
                                        android:gravity="left"
                                        android:text="Water the plants"
                                        style="@style/TextviewRegular"
                                        android:textColor="@android:color/black"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="25dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                                        android:text="₹70"
                                        style="@style/TextviewRegular"
                                        android:textColor="@color/color_skyblue"
                                        tools:ignore="RtlCompat" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="-15dp"
                                        android:layout_marginRight="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:textAlignment="textEnd"
                                        android:gravity="right"
                                        style="@style/TextviewRegular"
                                        android:text="1 Day"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_25sdp"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnContinue"
                            style="@style/Widget.App.Button"
                            android:layout_width="299dp"
                            android:layout_height="52dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/curved_background1"
                            android:text="@string/btn_cont"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/text_color_dark" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>