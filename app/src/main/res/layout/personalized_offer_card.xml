<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/serviceLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/curved_background3"
        android:elevation="@dimen/_5sdp"
        android:padding="2dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivServiceLogo"
            android:layout_width="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_sports" />

        <TextView
            android:id="@+id/tvServiceName"
            style="@style/TextviewRegular"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="20% cashback"

            android:textColor="@color/text_color_dark"
            android:textSize="12sp"

            app:layout_constraintStart_toEndOf="@+id/ivServiceLogo"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            style="@style/TextviewRegular"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Swiggy"
            android:textColor="#F7AA11"

            android:textSize="10sp"

            app:layout_constraintStart_toStartOf="@+id/tvServiceName"
            app:layout_constraintTop_toBottomOf="@+id/tvServiceName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>