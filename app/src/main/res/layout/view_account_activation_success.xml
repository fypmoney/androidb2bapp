<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.StayTunedViewModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/screenMarginLeft"
        android:layout_marginEnd="@dimen/screenMarginRight"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="247dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_kuddos" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCongrats"
            style="@style/TextviewBold"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/account_activation_success_screen_title"
            android:textAlignment="center"
         />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCreateAccount"
           style="@style/TextviewRegular"
            android:layout_below="@id/tvCongrats"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/account_activation_success_screen_sub_title"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            />





    </RelativeLayout>
    </LinearLayout>
</layout>