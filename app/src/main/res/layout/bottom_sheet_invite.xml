<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/TextviewBold"
            android:layout_marginTop="31dp"
            android:text="@string/invite_member_text1"
            android:textSize="31sp"
            android:layout_gravity="center"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title1"
            style="@style/TextviewRegular"
            android:layout_marginTop="26dp"
            android:text="@string/invite_member_text1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/text_color_dark"
            android:drawableTint="@color/black"
            android:drawableEnd="@drawable/ic_icon_feather_copy"
            android:drawablePadding="12dp"
            android:background="@drawable/curved_background10"
            android:padding="14dp"
            android:maxLength="15"
            android:textAlignment="center"

            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title3"
            style="@style/TextviewRegular"
            android:layout_marginTop="26dp"
            android:text="@string/invite_member_text2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title4"
            style="@style/TextviewRegular"
            android:layout_marginTop="32dp"
            android:text="@string/invite_member_text3"
            android:layout_gravity="center"
            android:textSize="@dimen/textSize_18"
            android:visibility="gone"
            android:textColor="@color/text_color_dark"
            />


        <Button
            android:id="@+id/button_share"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/share_btn_text"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@color/text_color_dark" />


    </LinearLayout>
</layout>

