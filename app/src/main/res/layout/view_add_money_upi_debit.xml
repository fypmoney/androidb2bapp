<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.AddMoneyUpiDebitViewModel" />


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screenMarginLeft"
                android:layout_marginEnd="@dimen/screenMarginRight">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/balance_text"
                    style="@style/TextviewRegular"
                    android:layout_marginTop="30dp"
                    android:text="@{viewModel.amountToAdd1}"
                    android:textSize="17dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/upi_text"
                    style="@style/TextviewRegular"
                    android:layout_below="@+id/balance_text"
                    android:layout_marginTop="40dp"
                    android:ellipsize="end"
                    android:text="@string/add_money_upi_text"
                    android:textColor="@color/text_color_dark"
                    android:textSize="17dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/upi_text"
                    android:layout_marginTop="@dimen/margin"
                    app:adapter="@{viewModel.addMoneyUpiAdapter}"
                    app:spanCount="4"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/debit_card_text"
                    style="@style/TextviewRegular"
                    android:layout_below="@+id/my_recycler_view"
                    android:layout_marginTop="40dp"
                    android:ellipsize="end"
                    android:text="@string/add_money_debit_text"
                    android:textColor="@color/text_color_dark"
                    android:textSize="17dp" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/debit_card_text"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleY="0.4"
                        android:scaleX="0.4"
                        android:visibility="@{viewModel.isSavedCardProgressVisible?View.VISIBLE:View.GONE}" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/my_recycler_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.isSavedCardProgressVisible?View.GONE:View.VISIBLE}"
                        app:adapter="@{viewModel.savedCardsAdapter}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_debit_card_text"
                    style="@style/TextviewBold"
                    android:layout_below="@+id/linear"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:onClick="@{()->viewModel.onAddNewCardClicked()}"
                    android:text="@string/add_money_add_new_card_text"
                    android:textColor="@color/color_skyblue"
                    android:textSize="17dp" />


            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>