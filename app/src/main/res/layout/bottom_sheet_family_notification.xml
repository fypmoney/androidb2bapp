<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verification_title"
            style="@style/TextviewBold"
            android:layout_marginTop="55dp"
            android:text="@string/add_member_heading"
            android:layout_gravity="center"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="43dp"
            app:srcCompat="@drawable/ic_family_tab_illustration" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/TextviewRegular"
            android:layout_marginTop="43dp"
            android:layout_gravity="center"
            android:paddingStart="40dp"
            android:textAlignment="center"
            android:paddingEnd="40dp"
            />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_reject"
                style="@style/TextviewRegular"
                android:textSize="@dimen/textSize_18"
                android:textColor="@color/text_color_dark"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/reject_btn_text"
                />

            <Button
                android:id="@+id/button_accept"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:text="@string/accept_btn_text"
                android:textAllCaps="false"
                app:backgroundTint="@color/text_color_dark" />

            <Button
                android:id="@+id/button_cancel"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="@string/cancel_btn_text"
                android:textAllCaps="false"
                app:backgroundTint="@color/text_color_dark"
                />

        </LinearLayout>




    </LinearLayout>
</layout>

