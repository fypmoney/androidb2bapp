<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.CardScreenViewModel" />

        <variable
            name="fragment"
            type="com.fypmoney.view.fragment.CardScreen" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="@{viewModel.isFrontVisible?View.VISIBLE:View.GONE,default=visible}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mCardFrontLayout"
            android:layout_width="239dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@drawable/card"
            android:padding="16dp">


        </androidx.appcompat.widget.AppCompatImageView>
    </FrameLayout>
</layout>