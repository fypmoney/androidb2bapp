<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_36sdp"
    android:layout_marginEnd="@dimen/_36sdp"
    android:background="@drawable/round_dark_grey_rewards_dialod"
    android:paddingBottom="@dimen/dp18">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNotificationMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp28"
        android:layout_marginTop="@dimen/dp42"
        android:text="@string/are_you_sure_you_want_to_disable_whatsapp_notifications"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontFamily="@font/product_sans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDisableNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:backgroundTint="@color/reward_continue_button"
        android:text="@string/disable"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationMessage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCancelNotificationClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp28"
        android:layout_marginTop="@dimen/dp4"
        android:alpha="0.7"
        android:padding="@dimen/dp12"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:fontFamily="@font/product_sans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDisableNotifications" />

</androidx.constraintlayout.widget.ConstraintLayout>
