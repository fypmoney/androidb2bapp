<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.HomeScreenViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_View_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_background23"
                android:orientation="vertical"
                android:paddingHorizontal="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_balance"
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/balance_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/amount"
                    style="@style/TextviewBold"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:text="@{@string/Rs+viewModel.availableAmount}"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="@{viewModel.isFetchBalanceVisible?View.INVISIBLE:View.VISIBLE,default=gone}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_balance"
                    tools:visibility="visible"
                    tools:text="â‚¹8,954" />

                <com.fypmoney.view.customview.HorizontalDottedProgress
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/amountFetching"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:visibility="visible"
                    android:layout_marginStart="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_balance"
                    app:layout_constraintEnd_toEndOf="@+id/tv_balance"
                    app:layout_constraintStart_toStartOf="@+id/tv_balance" />



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:weightSum="2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/amount">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnAddMoney"
                        style="@style/TextviewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/curved_background24"
                        android:drawableStart="@drawable/ic_add_money"
                        android:gravity="start|center"
                        android:drawablePadding="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:onClick="@{()->viewModel.onAddMoneyClicked()}"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="10dp"
                        android:text="@string/add_money_btn_text"
                        android:textColor="@color/text_color_dark"
                        android:textSize="14sp" />



                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextviewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp10"
                        android:background="@drawable/curved_background25"
                        android:drawableStart="@drawable/ic_pay"
                        android:gravity="start|center"
                        android:drawablePadding="@dimen/_8sdp"
                        android:onClick="@{()->viewModel.onPayClicked()}"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="10dp"                        android:text="@string/pay_money_btn_text"
                        android:textColor="@color/text_color_dark"
                        android:textSize="14sp" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/ll_upper_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_View_layout">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/choreCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:padding="10dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:background="@drawable/ic_chores"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/quick_actions_chores"
                            android:textSize="17sp" />
                        <!--<FrameLayout
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/circular2"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_chores" />

                        </FrameLayout>-->

                        <!--<androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="@string/quick_actions_chores"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginHorizontal="15dp"
                            android:text="@string/quick_actions_chores1"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_dark"
                            android:textSize="12sp" />-->
                    </FrameLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:id="@+id/spinwheel"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:background="@drawable/ic_rewards"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/quick_actions_rewards"
                            android:textSize="17sp" />
                        <!--<FrameLayout
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/circular3"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_rewards" />

                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="@string/quick_actions_rewards"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginHorizontal="15dp"
                            android:text="@string/quick_actions_rewards1"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_dark"
                            android:textSize="12sp" />-->
                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_second_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_upper_card">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/split_bills_cv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:orientation="vertical"
                        android:background="@drawable/ic_split_bills">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/quick_actions_split_bill"
                            android:textSize="17sp" />

                        <!-- <FrameLayout
                             android:layout_width="@dimen/_75sdp"
                             android:layout_height="@dimen/_75sdp"
                             android:layout_gravity="center"
                             android:layout_marginTop="10dp"
                             android:background="@drawable/cirecular1"
                             app:layout_constraintTop_toTopOf="parent">

                             <androidx.appcompat.widget.AppCompatImageView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                 android:background="@drawable/ic_split_bills" />

                         </FrameLayout>

                         <androidx.appcompat.widget.AppCompatTextView
                             style="@style/TextviewBold"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             android:layout_marginTop="8dp"
                             android:text="@string/quick_actions_split_bill"
                             android:textSize="14sp" />

                         <androidx.appcompat.widget.AppCompatTextView
                             style="@style/TextviewRegular"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             android:layout_marginTop="4dp"
                             android:layout_marginBottom="4dp"
                             android:paddingStart="4dp"
                             android:paddingEnd="4dp"
                             android:layout_marginHorizontal="10dp"
                             android:text="@string/coming_soon"
                             android:textAlignment="center"
                             android:textColor="@color/text_color_dark"
                             android:textSize="12sp" />-->
                    </FrameLayout>


                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:onClick="@{()->viewModel.onReferralAndCodeClicked()}"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toTopOf="parent">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:orientation="vertical"
                        android:background="@drawable/ic_referral">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/quick_actions_referrals"
                            android:textSize="17sp" />
                        <!--<FrameLayout
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/circular4"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_refral" />

                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="@string/quick_actions_referrals"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginHorizontal="10dp"
                            android:text="@string/quick_actions_referrals1"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_dark"
                            android:textSize="12sp" />-->
                    </FrameLayout>


                </com.google.android.material.card.MaterialCardView>




            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recent_tv"
                style="@style/TextviewBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="20dp"
                android:text="@string/recent"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_second_card" />




            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/text_color_dark"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:visibility="@{viewModel.isFeedVisible?View.GONE:View.VISIBLE,default=visible}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp10"
                app:layout_constraintTop_toBottomOf="@+id/reedem_mynts_rl" />




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible"
                tools:listitem="@layout/item_top_ten_user"
                app:layout_constraintTop_toBottomOf="@+id/recent_tv" />

            <RelativeLayout
                android:id="@+id/reedem_mynts_rl"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recent_rv"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_redeem_mynts">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_mynts_tv"
                    style="@style/TextviewBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/redeem_mynts"
                    android:textColor="@color/yellow"
                    android:textSize="17sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sub_title_mynts_tv"
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_mynts_tv"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/convert_your_earned_n_mynts_into_cashback"
                    android:textColor="@color/text_color_dark"
                    android:textSize="12sp" />

            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/dp10"
                android:visibility="@{viewModel.isFeedVisible?View.VISIBLE:View.GONE,default=gone}"
                app:adapter="@{viewModel.feedsAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/reedem_mynts_rl" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>