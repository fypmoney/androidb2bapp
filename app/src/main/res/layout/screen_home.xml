<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.HomeScreenViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                app:srcCompat="@drawable/ic_scan" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNotificationBell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_toStartOf="@+id/myProfile"
                app:srcCompat="@drawable/notification_bell_icon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/myProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/ic_profile" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_38sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_balance"
            style="@style/TextviewRegular"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/btnAddMoney"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/balance_text"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/title_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/amount"
            style="@style/TextviewBold"
            android:layout_below="@+id/tv_balance"
            android:layout_marginTop="@dimen/_7sdp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:singleLine="true"
            android:text="@{@string/Rs+viewModel.availableAmount}"
            android:textSize="22dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnAddMoney"
            style="@style/TextviewRegular"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/curved_border"
            android:gravity="center"
            android:text="@string/add_money_btn_text"
            android:textAllCaps="false"
            android:textColor="@color/text_color_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPay"
            style="@style/Widget.App.Button"
            android:layout_width="299dp"
            android:layout_height="52dp"
            android:layout_below="@+id/btnAddMoney"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_38sdp"
            android:background="@drawable/curved_background1"
            android:text="@string/pay_btn_text"
            android:textAllCaps="false"
            app:backgroundTint="@color/text_color_dark" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/quick_action"
            style="@style/TextviewRegular"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btnPay"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:text="@string/quick_actions"
            android:textAllCaps="false"
            android:textColor="@color/text_color_dark"

            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutServicePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                   >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/firstTextView"
                        android:layout_width="117dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_split_bills" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/margin"
                        android:layout_marginBottom="@dimen/_11sdp"
                        android:background="@drawable/curved_background8"
                        android:layout_marginTop="@dimen/_10sdp">
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextviewBold"
                        android:textSize="22dp"
                        android:text="@string/quick_actions_split_bill"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                       />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewRegular"
                            android:textSize="12dp"
                            android:textColor="@color/text_color_dark"
                            android:text="@string/quick_actions_split_bill1"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            /></LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="117dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_chores" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/margin"
                        android:layout_marginBottom="@dimen/_11sdp"
                        android:background="@drawable/curved_background9"
                        android:layout_marginTop="@dimen/_10sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewBold"
                            android:textSize="22dp"
                            android:text="@string/quick_actions_chores"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextviewRegular"
                            android:textSize="12dp"
                            android:textColor="@color/text_color_dark"
                            android:text="@string/quick_actions_chores1"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            /></LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:contentPadding="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/curved_background7"

                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_rewards" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextviewBold"
                        android:textSize="22dp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/quick_actions_chores"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:contentPadding="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/curved_background7"

                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_referral" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextviewBold"
                        android:textSize="22dp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/quick_actions_referrals"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</layout>