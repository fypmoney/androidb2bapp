<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.CardScreenViewModel" />

        <variable
            name="fragment"
            type="com.fypmoney.view.fragment.CardScreen" />


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/card_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    layout="@layout/virtual_card_back_layout"
                    bind:fragment="@{fragment}"
                    bind:viewModel="@{viewModel}" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <include
                    layout="@layout/virtual_card_front_layout"
                    bind:viewModel="@{viewModel}"
                    bind:fragment="@{fragment}"/>

            </FrameLayout>


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
           >


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rotate"
                style="@style/TextviewRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/ic_rotate"
                android:drawablePadding="10dp"
                android:text="@string/rotate_card"
                android:textColor="@color/text_color_dark"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rotate"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/issue"
                style="@style/TextviewRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/issue_by"
                android:layout_gravity="center"
                android:textColor="@color/text_color_dark"
                android:textSize="17dp" />

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/TextviewRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/yes_bank_logo"
                android:drawablePadding="10dp"
                android:textColor="@color/text_color_dark"
                />

            </LinearLayout>

        </RelativeLayout>


        <com.fypmoney.util.ScrollableListView
            android:id="@+id/list"
            android:background="@drawable/curved_background12"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:dividerHeight="0dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp" />

    </LinearLayout>

    </ScrollView>

</layout>