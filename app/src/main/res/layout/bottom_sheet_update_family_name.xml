<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1"/>



        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="43dp"
            app:srcCompat="@drawable/ic_family_name_update" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verification_title"
            style="@style/TextviewRegular"
            android:layout_marginTop="21dp"
            android:text="@string/set_family_name"
            android:layout_gravity="center"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/text_color_dark"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_rounded_rectangle_shape_solid_gray"
            android:hint="@string/update_family_hint"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:paddingStart="@dimen/edittextHintPaddingStart"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/edittextHintPaddingEnd"
         />



        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/button_cancel"
                style="@style/TextviewRegular"
                android:textSize="@dimen/textSize_18"
                android:textColor="@color/text_color_dark"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/cancel_btn_text"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_update"
                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:text="@string/update_btn_text"
                android:background="@drawable/curved_background1"
                android:textAllCaps="false"
                app:backgroundTint="@color/text_color_dark"
                />


        </LinearLayout>




    </LinearLayout>
</layout>

