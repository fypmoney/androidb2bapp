<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewHelper"
            type="com.fypmoney.viewhelper.BankTransactionHistoryViewHelper" />

    </data>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivServiceLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@{viewHelper.isCredited?@drawable/curved_background8:@drawable/curved_background19}"
            android:padding="12dp"
            android:src="@{viewHelper.isCredited?@drawable/ic_request_money:@drawable/ic_send_money}"  />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heading"
            style="@style/TextviewRegular"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/ivServiceLogo"
            android:gravity="start"
            android:text="@{viewHelper.date}"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/textSize_18" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/number_relation"
            style="@style/TextviewRegular"
            android:layout_below="@+id/heading"
            android:layout_marginStart="@dimen/margin"
            android:layout_toEndOf="@+id/ivServiceLogo"
            android:ellipsize="end"
            android:text="@{viewHelper.date}"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/invite"
            style="@style/TextviewRegular"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@{viewHelper.amount}"
            android:textColor="@{viewHelper.isCredited?@color/color_dark_green:@color/text_color_red}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/ivServiceLogo"
            android:background="@color/dividerColor"
            android:layout_marginTop="20dp"
            android:visibility="@{viewHelper.isLineVisible?View.VISIBLE:View.GONE}"/>

    </RelativeLayout>

</layout>