<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewHelper"
            type="com.fypmoney.viewhelper.CreateTaskViewHelper" />

    </data>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewHelper.onItemClicked()}"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutServicePrice"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivServiceLogo"
                    android:layout_width="50dp"
                    android:visibility="gone"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/curved_background14"
                    android:padding="12dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heading"
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/_5sdp"
                  android:textSize="18sp"
                    android:gravity="start"
                    android:layout_centerHorizontal="true"
                    android:text="@{viewHelper.notification.description}"
                    android:textColor="@color/color_skyblue"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/invite"
                    style="@style/TextviewRegular"
                    android:layout_alignParentEnd="true"
                    android:text="@{viewHelper.notification.amount}"
                    android:layout_below="@+id/heading"
                    android:textColor="@color/color_skyblue" />


                 </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>



    </RelativeLayout>

</layout>