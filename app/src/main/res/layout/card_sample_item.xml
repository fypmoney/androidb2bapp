<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewHelper"
            type="com.fypmoney.viewhelper.CreateTaskViewHelper" />

    </data>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewHelper.onItemClicked()}"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginTop="10dp"

            android:layout_weight="1"
            app:cardCornerRadius="@dimen/card_corner_radius"

            >


            <androidx.cardview.widget.CardView
                android:backgroundTint="#F7AA11"
                android:alpha=".2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:elevation="@dimen/_2sdp"
                android:layout_height="match_parent">






                <TextView
                    android:id="@+id/heading"
                    style="@style/TextviewRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewHelper.notification.description}"


                    android:ellipsize="end"
                    android:gravity="center"

                    android:textColor="@color/text_color_dark"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="23dp" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_14sdp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="5dp">

                    <TextView
                        style="@style/TextviewRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:alpha=".80"
                        android:background="@drawable/round_backgorund_20"
                        android:gravity="center"
                        android:backgroundTint="#F7AA11"
                        android:paddingLeft="@dimen/_4sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="1d left"
                        android:textColor="@color/text_color_dark" />

                    <TextView
                        style="@style/TextviewRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="@{viewHelper.notification.amount}"

                        android:background="@drawable/round_backgorund_20"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_4sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:id="@+id/invite"

                        android:textColor="@color/text_color_dark" />

                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.cardview.widget.CardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutServicePrice"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent">


        </com.google.android.material.card.MaterialCardView>



    </RelativeLayout>

</layout>