<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.UserProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/layout"
                layout="@layout/toolbar" />

            <FrameLayout
                android:id="@+id/ivServiceLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/layout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:layout_marginStart="10dp"
                app:customBackgroundColor="@{@color/dividerColor}"
                app:customIsRounded="@{true}"
                app:customStrokeColor="@{@color/text_color_dark}"
                app:customStrokeWidth="@{@dimen/dp1}"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/user_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_profile_img"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:onClick="@{()->viewModel.onProfileClicked()}"
                    app:srcCompat="@drawable/ic_edit" />


            </FrameLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                style="@style/TextviewRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivServiceLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:maxEms="20"
                android:text='@{viewModel.userNameValue ?? ""}'
                android:textColor="@color/text_color_dark"
                android:textSize="20sp" />


            <LinearLayout
                android:id="@id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dob"
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_birthdate"
                    android:maxEms="20"
                    tools:text ="6/7/1993"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:text='@{viewModel.dob ?? ""}'
                    android:textColor="@color/text_color_dark"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/phone"
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/ic_call"
                    android:maxEms="20"
                    android:gravity="center"
                    tools:text ="7737947610"
                    android:drawablePadding="10dp"
                    android:text='@{viewModel.phone ?? ""}'
                    android:textColor="@color/text_color_dark"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linear_layout"
                android:layout_marginTop="30dp"
                android:background="@drawable/curved_background12"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <com.fypmoney.util.ScrollableListView
                    android:id="@+id/profileList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    app:srcCompat="@drawable/ic_rate_us" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextviewBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:maxEms="20"
                    android:text="@string/thank_you"
                    android:textSize="22sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:maxEms="20"
                    android:text="@string/rate_text" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/play_store_tv"
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_background1"
                    android:drawableEnd="@drawable/ic_google_play_logo"
                    android:drawablePadding="10dp"
                    android:maxEms="20"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/rate_text1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextviewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@{viewModel.buildVersion}" />




            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</layout>