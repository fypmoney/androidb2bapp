<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/reward_background"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        tools:context=".view.home.main.explore.view.ExploreFragment">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            style="@style/TextviewBold"
            android:layout_marginStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textColor="@color/white"

            android:text="@string/explore"
            android:textAlignment="textStart"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="8dp"
            style="@style/TextviewBold"
            android:textColor="@color/text_color_light"
            android:layout_marginEnd="8dp"
            android:text="@string/as_fresh_as_it_gets"

            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/golden_card_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/amount_mynts"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha=".10"
            android:background="@drawable/round_dark_grey_rewards_18"
            android:backgroundTint="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="36dp"


            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/arrow_back"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/reward_golden_tickets_text" />

        <com.google.android.material.textview.MaterialTextView

            style="@style/TextviewBold"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content"


            android:text="Recharge now"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_12sdp"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/amount_golder_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView

            style="@style/TextviewBold"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content"


            android:text="Recharge now"
            android:textColor="@color/white"
            android:id="@+id/recharge_tv"
            android:layout_marginStart="@dimen/_12sdp"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/amount_golder_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView


            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/recharge_tv"

            android:text="Recharge now"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_12sdp"
            android:alpha=".60"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/amount_golder_tv" />

        <ImageView
            android:id="@+id/amount_golder_tv"
            style="@style/TextviewBold"
            android:src="@drawable/common_full_open_on_phone"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:textColor="@color/reward_golden_tickets_text"
            android:text="@string/four_dots"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_assmble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        style="@style/TextviewBold"
        android:textColor="@color/white"
        android:layout_marginEnd="8dp"
        android:text="Gamers assemble"

        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/rv_cards"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_16sdp"
            style="@style/TextviewBold"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:text="List"

            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:id="@+id/rv_explore"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</layout>