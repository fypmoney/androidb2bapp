<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#0E141C"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_id" />

        <TextView
            style="@style/TextviewBold"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_width="wrap_content"
            android:text="@string/history"
            android:id="@+id/history"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_id"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_id"
            app:layout_constraintTop_toTopOf="@+id/toolbar_id" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"

            app:layout_constraintTop_toBottomOf="@+id/toolbar_id"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/giftcard_rv"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>