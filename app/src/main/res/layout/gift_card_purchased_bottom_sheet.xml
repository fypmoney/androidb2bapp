<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/screenMarginLeft"
        android:paddingEnd="@dimen/screenMarginRight">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_background1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_title"
            style="@style/TextviewBold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_26sdp"
            android:text="WoWo!"
            android:textColor="@color/text_color_dark"
            android:textSize="31sp" />

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="match_parent"

            android:layout_height="@dimen/_160sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_26sdp"
            app:srcCompat="@drawable/tab_three_rewards" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextviewRegular"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:textColor="@color/text_color_light"
            android:text=""
            android:id="@+id/msg_purchase"
            android:textAlignment="center" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextviewBold"
            android:layout_gravity="center_horizontal"

            android:textSize="22sp"
            android:id="@+id/amount"

            android:text=""
            android:visibility="gone"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/color_skyblue" />

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_height="wrap_content">

            <Button


                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Continue"
                android:id="@+id/continuebtn"

                android:textAllCaps="false"

                app:backgroundTint="@color/text_color_dark" />

        </LinearLayout>


    </LinearLayout>


</layout>

