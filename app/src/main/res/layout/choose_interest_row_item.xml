<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<data>

<import type="android.view.View" />

<import type="androidx.core.content.ContextCompat" />

<variable
    name="viewHelper"
    type="com.dreamfolks.baseapp.viewhelper.ChooseInterestViewHelper" />

<variable
    name="viewModel"
    type="com.dreamfolks.baseapp.viewmodel.SelectInterestViewModel" />

</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/serviceLayout"
    android:paddingStart="@dimen/_4sdp"
    android:paddingEnd="@dimen/_4sdp"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:onClick="@{()->viewHelper.onItemClicked()}"
    android:background="@{viewHelper.isBackgroundHighlight?@color/dividerColor:@color/white}"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvService"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:backgroundTint="#D4E2FF"
        android:padding="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_360sdp"
        app:cardElevation="@dimen/card_elevation"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivServiceLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
           app:srcCompat="@drawable/logo_white"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvServiceName"
        android:layout_width="@dimen/_66sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="top|center"
        android:text="@{viewHelper.interestResponseDetails.name}"
        android:textSize="@dimen/micro_text_size"
        app:layout_constraintEnd_toEndOf="@id/cvService"
        app:layout_constraintStart_toStartOf="@id/cvService"
        app:layout_constraintTop_toBottomOf="@id/cvService" />
</androidx.constraintlayout.widget.ConstraintLayout></layout>