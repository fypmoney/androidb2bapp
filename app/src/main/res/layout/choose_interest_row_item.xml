<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewHelper"
            type="com.fypmoney.viewhelper.ChooseInterestViewHelper" />

        <variable
            name="viewModel"
            type="com.fypmoney.viewmodel.SelectInterestViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/serviceLayout"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="@{()->viewHelper.onItemClicked()}"
        android:background="@drawable/curved_background3"
        android:elevation="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivServiceLogo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/curved_background4"
            app:srcCompat="@drawable/ic_profile"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvServiceName"
            android:layout_width="@dimen/_66sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="@{viewHelper.interestResponseDetails.name}"
            android:textSize="@dimen/micro_text_size"

            />
    </LinearLayout></layout>