<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fypmoney.view.giftCardModule.viewModel.PurchaseGiftViewModel" />


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#0E141C"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_gift_card" />


        <RelativeLayout
            android:layout_width="match_parent"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/message_text"
                style="@style/TextviewRegular"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color_light"
                android:textSize="15dp"
                tools:text="Earn 1 FypMynt for every ₹1 spent for a gift card" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amount"
                style="@style/TextviewBold"
                android:layout_below="@+id/message_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{@string/Rs+viewModel.availableAmount}"
                android:textSize="42dp"
                android:visibility="@{viewModel.isFetchBalanceVisible?View.GONE:View.VISIBLE,default=gone}" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/add_money"
                style="@style/TextviewRegular"
                android:layout_below="@id/amount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/add_money_gift_card"
                android:textColor="@color/white"
                android:alpha=".7"
                android:textSize="17sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/rv_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_money"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="@dimen/dp8"
                android:weightSum="4">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_below="@+id/rv_products"
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    style="@style/TextviewBold"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_dark_grey_rewards_18"
                    android:gravity="center"
                    android:hint="message"
                    android:textColorHint="@color/text_color_light"
                    android:textColor="@color/white"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vDivider5"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/pay_and_purchase"
                android:layout_below="@+id/lin"
                android:layout_marginTop="@dimen/_18sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="26dp"
                    android:paddingEnd="26dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".4"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"

                        android:alpha=".60"
                        android:text="Whom are you gifting this to?"

                        android:textColor="@color/white" />

                    <RadioGroup
                        android:id="@+id/radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/myself"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"

                            android:layout_marginBottom="@dimen/_3sdp"
                            android:buttonTint="@drawable/radio_selector_gifts"

                            android:text="Myself"

                            android:textColor="@color/white" />

                        <RadioButton

                            android:id="@+id/someone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@drawable/radio_selector_gifts"

                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:text="Someone"
                            android:textColor="@color/white" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/otheruser_layout"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha=".4"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/_14sdp"
                            android:alpha=".60"
                            android:text="Fill in the details below to whom you’re sending this gift card"
                            android:textColor="@color/white" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/verification_title"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:background="@drawable/round_dark_grey_rewards_18"
                            android:hint="@string/first_name_hint"
                            android:inputType="textCapWords"

                            android:paddingStart="@dimen/edittextHintPaddingStart"
                            android:paddingEnd="@dimen/edittextHintPaddingEnd"
                            android:singleLine="true"
                            android:textColor="@color/white"

                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etEmailIdData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etEmailId"
                            android:textColor="@color/white"

                            android:layout_marginTop="@dimen/_14sdp"
                            android:background="@drawable/round_dark_grey_rewards_18"
                            android:hint="xyz@gmail.com"

                            android:imeOptions="actionDone"

                            android:inputType="textEmailAddress"
                            android:maxLength="40"
                            android:paddingStart="@dimen/edittextHintPaddingStart"
                            android:paddingEnd="@dimen/edittextHintPaddingEnd"

                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etEmailId"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:background="@drawable/round_dark_grey_rewards_18"
                            android:hint="phone number"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:textColor="@color/white"

                            android:maxLength="40"
                            android:paddingStart="@dimen/edittextHintPaddingStart"
                            android:paddingEnd="@dimen/edittextHintPaddingEnd"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

            <Button
                android:id="@+id/pay_and_purchase"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_46sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:backgroundTint="@color/green_winnings"

                android:text="@string/pay"
                android:textAllCaps="false"

                android:textColor="@color/white"
                android:textSize="18sp"


                />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>