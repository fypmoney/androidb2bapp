<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recent_user_cl"
        android:paddingHorizontal="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recent_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:padding="2dp"
            app:customIsRounded="@{true}"
            app:customStrokeColor="@{@color/grey}"
            app:customStrokeWidth="@{@dimen/dp5}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/airtel_logo" />

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/TextviewRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:maxLength="20"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/recent_iv"
            app:layout_constraintStart_toEndOf="@+id/recent_iv"
            app:layout_constraintTop_toTopOf="@+id/recent_iv"
            tools:text="User Name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>