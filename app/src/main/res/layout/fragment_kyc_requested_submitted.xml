<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.kycagent.ui.KycRequestedSubmittedFragment">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp24"
                android:text="Full KYC Request Submitted!"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:fontFamily="@font/product_sans_regular" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp32"
                android:text="Your KYC Details have been successfully submitted. Please wait while we verify these  details. You will get an SMS on successful verification"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                app:fontFamily="@font/product_sans_regular" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieRewardConfetti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp24"
                app:lottie_loop="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/kyc_fingerprint" />

        </LinearLayout>

    </LinearLayout>

</layout>