<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamfolksApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="materialButtonStyle">@style/Widget.App.RoundedButton</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <!-- Customize your theme here. -->


    </style>
    <!--Button Style-->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">299dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="Widget.App.RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>

        <item name="shapeAppearance">@style/ShapeAppearance.Fyp.RoundedButton</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="RoundedTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector_bg_notification</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/round_backgorund_white_20</item>
        <item name="tabSelectedTextColor">#231F20</item>
        <item name="tabTextColor">#9CA3A5</item>
    </style>

    <style name="ShapeAppearance.Fyp.RoundedButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.DreamfolksApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="SplashTheme"  parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!--EditText Style-->
    <style name="App_EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_rounded_rectangle_shape_solid_gray
        </item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorHint">@color/text_color_light</item>
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/sub_title_size</item>
    </style>

    <!--Button Style-->
    <style name="App_Button" parent="Widget.MaterialComponents.Button">
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:layout_width">299dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:background">@drawable/curved_background1</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>


    <!--Divider Style-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/dividerColor</item>
    </style>
    <!--Vertical Style-->
    <style name="VerticalDivider">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="Theme.DreamfolksApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DreamfolksApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textColorPrimary">@color/colorFontPrimary</item>
        <item name="android:textColorSecondary">@color/colorFontSecondary</item>
        <item name="actionMenuTextColor">@color/colorFontSecondary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:colorBackground">@color/mainBackgroundColor</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="minHeight">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rounded_dialog</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="spinnerTheme">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!--
    Textview product sans bold
    -->
    <style name="TextviewBold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">@dimen/textSize_31</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>


    <!--
  Textview product sans regular
  -->
    <style name="TextviewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="newsted">
        <item name="android:background">@drawable/rounded_corner</item>


    </style>

    <style name="keyview">
        <item name="android:background">@drawable/white_round</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorHint">@color/text_color_light</item>
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="fontFamily">@font/product_sans_regular</item>

    </style>
    <style name="EditTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorHint">@color/text_color_light</item>
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="fontFamily">@font/product_sans_regular</item>

    </style>
    <style name="FreshChatTheme" parent="Theme.Freshchat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <style name="Theme.Freshchat.SelectedTheme" parent="FreshChatTheme" />

    <style name="Widget.Freshchat.FAQList">
        <item name="android:divider">@color/freshchat_article_list_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>

    <style name="Widget.Freshchat.FAQListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Freshchat.TeamMemberName">
        <item name="android:textAppearance">@style/TextviewBold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:text">@string/freshchat_default_agent_name</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="Widget.Freshchat.MessageReplyView">
        <item name="android:background">@color/freshchat_message_reply_view_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">5dp</item>
        <item name="android:minHeight">@dimen/freshchat_message_reply_frame_min_height</item>
    </style>

    <!-- This style doesn't support anything except text appearance attributes -->
    <style name="Widget.Freshchat.UserMessage">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textColor">@color/freshchat_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Freshchat.FAQCategoryName">
        <item name="android:textAppearance">@style/TextviewBold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textDirection">firstStrong</item>
    </style>

    <style name="Widget.Freshchat.FAQCategoryDescription">
        <item name="android:textAppearance">@style/TextviewRegular</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Freshchat.ChannelList">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Freshchat.ChannelAltIcon">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/freshchat_category_alt_text_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_margin">@dimen/freshchat_channel_icon_padding</item>
        <item name="android:textDirection">firstStrong</item>
    </style>

    <style name="Widget.Freshchat.ChannelName">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/freshchat_channel_name_max_lines</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/TextviewBold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Freshchat.ChannelDescription">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/freshchat_channel_desc_max_lines</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/TextviewRegular</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Freshchat.TeamMemberAvatarView">
        <item name="android:layout_height">@dimen/freshchat_message_avatar_icon_size</item>
        <item name="android:layout_width">@dimen/freshchat_message_avatar_icon_size</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="Widget.Freshchat.FAQCategoryAltIcon">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/freshchat_category_alt_text_bg</item>
        <item name="android:layout_margin">@dimen/freshchat_category_icon_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">@dimen/freshchat_category_icon_alt_view_size</item>
        <item name="android:layout_height">@dimen/freshchat_category_icon_alt_view_size</item>
        <item name="android:textDirection">firstStrong</item>
    </style>

    <style name="tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">10dp</item>
        <item name="android:background">@drawable/custom_indicator</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget"/>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="WhiteBottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="CustomBottomSheetDialogTheme1">
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="android:windowBackground"> @android:color/transparent</item>
    </style>



